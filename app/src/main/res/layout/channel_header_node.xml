<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:paddingLeft="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">


    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ico_icon="ion-chevron-right"
        app:ico_color="@color/text_gray"
        app:ico_size="20dp" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/icon"
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ico_color="@color/text_gray"
        app:ico_icon="ion-document"
        app:ico_size="24dp" />

    <TextView
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:id="@+id/node_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/channel_social_talkie"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ico_size="24dp"
        app:ico_color="#ff4444"
        app:ico_icon="ion-close" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/channel_social_add"
        android:layout_toLeftOf="@id/channel_social_talkie"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ico_size="24dp"
        app:ico_color="#99cc00"
        app:ico_icon="ion-plus" />

</RelativeLayout>
