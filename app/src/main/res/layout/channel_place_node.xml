<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">


    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:iiv_icon="ion-chevron-right"
        app:iiv_color="@android:color/white"
        app:iiv_size="20dp" />

    <com.mikepenz.iconics.view.IconicsImageView
        app:iiv_color="@color/text_lgray"
        app:iiv_size="20dp"
        android:layout_centerVertical="true"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/info"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/like"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_lgray"

            android:id="@+id/place_name"
            android:text="My Hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iiv_icon="ion-star"
                app:iiv_color="@color/text_lgray"
                app:iiv_size="9dp" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iiv_icon="ion-star"
                app:iiv_color="@color/text_lgray"
                app:iiv_size="9dp" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iiv_icon="ion-star"
                app:iiv_color="@color/text_lgray"
                app:iiv_size="9dp" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iiv_icon="ion-star"
                app:iiv_color="@color/text_lgray"
                app:iiv_size="9dp" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iiv_icon="ion-android-star-outline"
                app:iiv_color="@color/text_lgray"
                app:iiv_size="9dp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
